<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="bambooPlugin"/>
    
    <!-- add our web resources -->
    <web-resource key="bambooPlugin-resources" name="bambooPlugin Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        
        <resource type="download" name="bambooPlugin.css" location="/css/bambooPlugin.css"/>
        <resource type="download" name="bambooPlugin.js" location="/js/bambooPlugin.js"/>
        <resource type="download" name="images/" location="/images"/>

        <context>bambooPlugin</context>
    </web-resource>

    <taskType key="myFirstTask" name="My First Task" class="com.mabl.MyFirstTask">
        <description>A task that prints 'Hello, World!'</description>
    </taskType>

    <taskType key="test" name="createdeployment" class="com.mabl.CreateDeployment">
        <description>A first crack at a Mabl Bamboo plugin</description>
        <configuration class="com.mabl.CreateDeploymentConfigurator"/>
        <resource type="freemarker" name="edit" location="editCreateDeployment.ftl"/>
    </taskType>

</atlassian-plugin>